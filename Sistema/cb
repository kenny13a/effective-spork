#!/bin/bash
# nombre de terminal
echo -en "\033]0;Conejo-Blanco\a"
#Opciones
while getopts "aheu:" OPTION; do
        case $OPTION in

                e)
                        pkexec bash /opt/conejo-blanco/effective-spork/Ejecutame
                        exit 0
                        ;;
                h)
                        echo "Para ayuda pregunta en el Instituto de Tecnologia"
                        exit 0
                        ;;
                a)
                        pkexec bash /opt/conejo-blanco/effective-spork/Actualizame
                        exit 0
                        ;;
                u)
                        pkexec bash /opt/conejo-blanco/effective-spork/Materias/Programas/$OPTARG
                        exit 0
                        ;;                    
        esac
done
#verifica sudo
if [[ $UID != 0 ]]; then
        notify-send 'NO dijiste la palabra m치gica...'  
        /usr/bin/palabramagica &
    echo "Solo el administrador puede ejecutar este comando"
exit 1
else
    echo "FUNCIONO, todo est치 apagado pero funcion칩."        
    notify-send 'Universidad Nacional de Hurlingham' 'Laboratorio de Inform치tica' -u normal -i 'UNAHUR-logo' -t 10000
    pkexec bash /opt/conejo-blanco/effective-spork/Actualizame
fi
